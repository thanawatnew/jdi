doctype html
html
	head
		title link config
	body
		if success_messages && success_messages.length > 0
			p= success_messages
		if error_messages && error_messages.length > 0
			p= error_messages
		if messages && messages.length > 0
			p= messages
		form(action="/edit/#{note.link}",method="post")
			label(for='detail') detail
				textarea(id='detail',name='detail')|#{note.detail}
				<br>
			label(for='link') link >= 7 digit
				input(id='link',type='text',value='#{note.link}',name='link')
				<br>
			input(type='submit',value='submit',data-transition='fade', data-theme='c')
			br
			a(href="/#{note.link}")| return to the note
			br
			