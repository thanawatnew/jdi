doctype html
html
	head
		title link config
	body
		Welcome to jdi - Online text pasting system using Node.js
		br
		if success_messages && success_messages.length > 0
			p= success_messages
		if error_messages && error_messages.length > 0
			p= error_messages
		if message && message.length > 0
			p|#{message}
		<br>login: 
		#{user}
		br
		if !user
			<a href="/oauth/facebook">Login with Facebook</a>
			<br>
			<a href="/oauth/google">Login with Google</a>
			br
		else
			a(href="/add")|add a note
			br
			a(href="/logout")| logout